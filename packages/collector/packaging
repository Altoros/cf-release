set -e -x

cp -a collector/* ${BOSH_INSTALL_TARGET}

cd ${BOSH_INSTALL_TARGET}

bundle_cmd=/var/vcap/packages/ruby-2.1.4/bin/bundle

if [ "`uname -m`" == "ppc64le" ]; then
  $bundle_cmd config build.nokogiri --use-system-libraries
fi

$bundle_cmd install --local --deployment --without development test
